  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "properties": {
          "identifier": {
            "type": "string",
            "example": "csbennefit"
          },
          "password": {
            "type": "string",
            "example": "password"
          }
        },
        "xml": {
          "name": "LoginRequest"
        }
      },
      "RegisterRequest": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "example": "Benefit"
          },
          "username": {
            "type": "string",
            "example": "csbennefit"
          },
          "email": {
            "type": "string",
            "example": "csbennefit@gmail.com"
          },
          "password": {
            "type": "string",
            "example": "password"
          },
          "confirmPassword": {
            "type": "string",
            "example": "password"
          }
        },
        "xml": {
          "name": "RegisterRequest"
        }
      },
      "ActivationRequest": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "abcdef"
          }
        },
        "xml": {
          "name": "ActivationRequest"
        }
      },
      "CreateCategoryRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Category Name"
          },
          "description": {
            "type": "string",
            "example": "Category Description"
          },
          "icon": {
            "type": "string",
            "example": "https://example.com/icon.png"
          }
        },
        "xml": {
          "name": "CreateCategoryRequest"
        }
      },
      "CreateEventRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Event Name"
          },
          "banner": {
            "type": "string",
            "example": "https://example.com/event-banner.jpg"
          },
          "category": {
            "type": "string",
            "example": "Category ObjectId"
          },
          "description": {
            "type": "string",
            "example": "Event Description"
          },
          "startDate": {
            "type": "string",
            "example": "yyyy-MM-DD HH:mm:ss"
          },
          "endDate": {
            "type": "string",
            "example": "yyyy-MM-DD HH:mm:ss"
          },
          "location": {
            "type": "object",
            "properties": {
              "region": {
                "type": "string",
                "example": "Region ObjectId"
              },
              "coordinates": {
                "type": "array",
                "example": [
                  0,
                  0
                ],
                "items": {
                  "type": "number"
                }
              }
            }
          },
          "isOnline": {
            "type": "boolean",
            "example": false
          },
          "isFeatured": {
            "type": "boolean",
            "example": true
          }
        },
        "xml": {
          "name": "CreateEventRequest"
        }
      },
      "RemoveMediaRequest": {
        "type": "object",
        "properties": {
          "fileUrl": {
            "type": "string",
            "example": "https://example.com/file-to-remove.jpg"
          }
        },
        "xml": {
          "name": "RemoveMediaRequest"
        }
      }
    }
